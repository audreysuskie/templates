extends base

block content
  main.main
    .user-view
      include _nav
      .user-view-content
        span.page-header
          .page-title= title
          - const d = new Date();
          - const month = ['January','February','March','April','May','June','July','August','September','October','November','December'];
          - const day = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];
          - const today = day[d.getDay()] + ', ' + month[d.getMonth()] + ' ' + d.getDate() + ', ' + d.getFullYear();
            .page-date.small= `Today is ${today}`
        .section 
          form#new-service-form
            .form-group
              label.form-label(for='title') Title
              input#service-title.form-input(type='text', name='title', required)
            .form-group
              label.form-label(for='subtitle') Subtitle
              input#service-subtitle.form-input(type='text', name='subtitle', required)
            .form-group
              label.form-label(for='description') Description
              textarea#service-description.form-input(name='description', required)
            
            .form-group
              button.submit.form-button Add Service
