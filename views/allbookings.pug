extends base

block content
  main.main
    .user-view
      include _nav
      .user-view-content
        span.page-header
          span.page-title= `Current ${title}`
          - const d = new Date();
          - const month = ['January','February','March','April','May','June','July','August','September','October','November','December'];
          - const day = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];
          - const today = day[d.getDay()] + ', ' + month[d.getMonth()] + ' ' + d.getDate() + ', ' + d.getFullYear();
            .page-date.small= `Today is ${today}`
        .section 
          hr.sectionHR
          - const count = events.length;
          if count == 0
              .booking-row 
                .booking-subhead No bookings to display at this time.
          else
            each event in events 
              .booking-row
                .booking-subhead Name: 
                  .booking-text= event.user.name
                .booking-subhead Email: 
                  .booking-text= event.user.email
                .booking-subhead Service Booked: 
                  .booking-text= event.service
                .booking-subhead Appointment Date: 
                  .booking-text= event.eventDate
                .booking-subhead Appointment Time: 
                  .booking-text= event.eventTime
                hr.sectionHR
            .page-title= `Past ${title}`
            each pastevent in pastevents 
              .booking-row
                .booking-subhead Name: 
                  .booking-text= pastevent.user.name
                .booking-subhead Email: 
                  .booking-text= pastevent.user.email
                .booking-subhead Service Booked: 
                  .booking-text= pastevent.service
                .booking-subhead Appointment Date: 
                  .booking-text= pastevent.eventDate
                .booking-subhead Appointment Time: 
                  .booking-text= pastevent.eventTime
                hr.sectionHR
            
                 