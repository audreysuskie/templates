extends base

block content
  main.main
    .user-view
      include _nav
      .user-view-content
        span.page-header
          span.page-title= `Active ${title}`
          - const d = new Date();
          - const month = ['January','February','March','April','May','June','July','August','September','October','November','December'];
          - const day = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];
          - const today = day[d.getDay()] + ', ' + month[d.getMonth()] + ' ' + d.getDate() + ', ' + d.getFullYear();
            .page-date.small= `Today is ${today}`
        .section 
          - const count = users.length;
            .booking-count.small= `Showing ${count} of ${count} Clients`
          if count == 0
              .booking-row 
                .booking-subhead No clients to display at this time.
          else
            each user in users 
              .booking-row
                .booking-subhead Client Name: 
                  .booking-text= user.name
                .booking-subhead Email: 
                  .booking-text= user.email
                .booking-subhead Active: 
                  .booking-text Active
                hr.sectionHR
