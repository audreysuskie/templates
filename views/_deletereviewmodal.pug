.modal-wrapper
  .modal-container 
    #event-close &#x2715
    .modal-content
      .page-title Delete Review
      hr.sectionHR
      .page-subtitle Are you sure you want to delete this review?
      form#delete-review
        input#deleteId(type='hidden', value='')
        .booking-row
          .modal-subhead Service Reviewed: 
          .modal-subtext#review-service
          .modal-subhead Rating: 
          .modal-subtext#review-rating
          .modal-subhead Review: 
          .modal-subtext#review-review
          .modal-subhead Date Reviewed: 
          .modal-subtext#review-date

        .confirm-row
          button.submit.confirm#cancel Yes, delete this review
          a.confirm#confirm-cancel No, keep this review