            .footer-link Voluma®
      .footer-column 
        .footer-header Site Links 
        .footer-link Home
        .footer-link Services
        .footer-link About Us
        .footer-link FAQ's
        .footer-link Contact Us
      if !user
        .footer-column 
          .footer-header Account Links 
          .footer-link Account Login
          .footer-link Create Account
      if user && user.role == 'user'
        .footer-column 
          .footer-header Account Links 
          .footer-link Account Settings
          .footer-link Account History
          .footer-link Book Services
          .footer-link Current Bookings
          .footer-link Your Reviews
      if user && user.role == 'admin'    
        .footer-column 
            .footer-header Administrator Links 
            .footer-link Account Settings
            .footer-link Edit Services
            .footer-link Add New Service
            .footer-link All Bookings
            .footer-link Client Reviews
            .footer-link Client List
            .footer-link Messages
      .footer-column 
        .container-row
          .footer-container
            img#footer-logo(src='/images/logo_gen.svg')
          .footer-container
            .footer-header Company Name 
            .footer-text 12345 Main Street 
            .footer-text This City, State 00000
            .footer-text (000) 000-0000 
        .footer-icon-row 
          img.footer-icon(src='/images/socialicon-01.png', alt='linkedIn')
          img.footer-icon(src='/images/socialicon-09.png', alt='facebook')
          img.footer-icon(src='/images/socialicon-03.png', alt='instagram')
          img.footer-icon(src='/images/socialicon-04.png', alt='twitter')
          img.footer-icon(src='/images/socialicon-05.png', alt='snapchat')

