mixin reviews (review)
  .reviews__card
    .reviews__clientPhoto
      .reviews__client-img
        img(src=`/images/users/${review.user.photo}`, alt=`${review.user.name}`)
      .reviews-group
        .reviews-title.reviews__user= review.user.name
        .reviews__text= `${review.service} client`
    p.reviews__text= `"${review.review}"`
    .reviews__rating
      each star in [1, 2, 3, 4, 5]
        svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
          use(xlink:href='/images/icons.svg#icon-star')