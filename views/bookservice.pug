extends homebase

block content
  main.main
    .page-content
      
      .service-section 
        .service-title-row
          .page-title= title
      .service-section
        .service-row 
          .home-section-col 
            include _calendar
            .guide-row
              .calendar-guide
                .guide-container 
                  .guide-img.available #
                  .guide-text Available Date 
                .guide-container
                  .guide-img.selected #
                  .guide-text Selected 
                .guide-container
                  .guide-img.unavailable #
                  .guide-text Unavailable
          .home-section-col
            .modal-subtext Select a date from one of the available dates on the calendar. Then select an appointment time from the available options.
            .hidden 
              #service-availability= service.availability

            form#booking-form(style='width: 100%;')
              input#date-string(type='hidden', name='date-string')
              .form-group(style='width: 100%;')
                label.form-label(for='service') Service Selected
                input.form-input(type='text', id='service-title', name='service-title', value=`${service.title}`, readonly)
                input.form-input(type='hidden', id='service', name='service', value=`${service.id}`)
              .form-group
                label.form-label(for='book-date') Select Date
                span#book-date-note.small Please select by clicking on an available date on the calendar.
                input#book-date.form-input(type='text', name='book-date', readonly)
              .form-group
                label.form-label(for='book-time') Appointment Time
                select.form-input(id='book-time',name='book-time')
                  option(value='not selected' selected) times available
                  option(value='09:00am') 9:00am
                  option(value='10:30am') 10:30am
                  option(value='12:00pm') 12:00pm
                  option(value='1:30pm') 1:30pm
                  option(value='3:00pm') 3:00pm
                  option(value='4:30pm') 4:30pm
              
              .form-group
                button.btn.submit.book-button Book Now